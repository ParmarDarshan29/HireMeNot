# HireMeNot Environment Variables
# Copy this file to .env and fill in your API keys

# Choose AI Provider: set to 'true' to use local Ollama, 'false' for OpenRouter
USE_LOCAL_AI=false

# OpenRouter API Configuration (if USE_LOCAL_AI=false)
# Get your free API key at: https://openrouter.ai/keys
OPENROUTER_API_KEY=your_openrouter_api_key_here
OPENROUTER_MODEL=meta-llama/llama-3.2-3b-instruct:free

# Local AI Configuration (if USE_LOCAL_AI=true)
# Make sure Ollama is installed and running: https://ollama.ai/
OLLAMA_URL=http://localhost:11434/api/generate
OLLAMA_MODEL=llama3.2

# Giphy API (Optional - for random memes/GIFs)
# Get a free API key at: https://developers.giphy.com/
GIPHY_API_KEY=your_giphy_api_key_here

# Site Configuration
SITE_URL=http://localhost:8000
